            border-radius: 5px;
            margin-bottom: 20px;
            display: none;
            text-align: center;
        }

        .alert.show {
            display: block;
        }

        .alert.error {
            background: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }

        .data-summary {
            background: white;
            padding: 25px;
