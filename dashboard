<body>
    <div class="container">
        <header>
            <h1>Dashboard BPPKAD Blora</h1>
            <p class="subtitle">Badan Pengelolaan Pendapatan, Keuangan dan Aset Daerah</p>
        </header>

        <div class="charts-container">
            <div class="chart-card">
                <h3 class="chart-title">Grafik Pendapatan</h3>
                <div class="chart-container">
                    <canvas id="pendapatanChart"></canvas>
                </div>
            </div>
            
            <div class="chart-card">
                <h3 class="chart-title">Grafik Belanja</h3>
                <div class="chart-container">
                    <canvas id="belanjaChart"></canvas>
                </div>
            </div>
            
            <div class="chart-card">
                <h3 class="chart-title">Grafik Pembiayaan</h3>
                <div class="chart-container">
                    <canvas id="pembiayaanChart"></canvas>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2 class="form-title">Input Data Keuangan</h2>
            <div class="alert" id="alert"></div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="kategori">Kategori:</label>
                    <select id="kategori" onchange="updateSubkategori()" required>
                        <option value="">Pilih Kategori</option>
                        <option value="pendapatan">Pendapatan</option>
                        <option value="belanja">Belanja</option>
                        <option value="pembiayaan">Pembiayaan</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="subkategori">Subkategori:</label>
                    <input type="text" id="subkategori" placeholder="Tulis nama subkategori" required disabled>
                </div>
                
                <div class="form-group">
                    <label for="tahun">Tahun:</label>
                    <select id="tahun" required>
                        <option value="">Pilih Tahun</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="nilai">Nilai (Rupiah):</label>
                    <input type="number" id="nilai" placeholder="Masukkan nilai" required min="0">
                </div>
            </div>
            
            <button class="btn" onclick="simpanData()">Simpan Data</button>
        </div>

        <div class="data-summary">
            <h3 class="summary-title">Ringkasan Data Terbaru</h3>
            <div class="summary-grid" id="summaryGrid">
                <!-- Data summary will be populated by JavaScript -->
            </div>
        </div>
    </div>

    <script>
        // Konfigurasi subkategori
        const subkategoriData = {
            pendapatan: [
                'Pajak Daerah',
                'Retribusi Daerah', 
                'Lain-lain Pendapatan'
            ],
            belanja: [
                'Belanja Pegawai',
                'Belanja Barang/Jasa',
                'Belanja Modal'
            ],
            pembiayaan: [
                'Penerimaan Pembiayaan',
                'Pengeluaran Pembiayaan'
            ]
        };

        // Data storage
        const tahunLabels = ['2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024'];
        let dataKeuangan = {
            pendapatan: {},
            belanja: {},
            pembiayaan: {}
        };

        // Chart instances
        let charts = {};

        // Color schemes untuk setiap kategori
        const colorSchemes = {
            pendapatan: ['#3498db', '#2980b9', '#1abc9c'],
            belanja: ['#e74c3c', '#c0392b', '#e67e22'],
            pembiayaan: ['#f39c12', '#d68910']
        };

        // Fungsi untuk memuat data dari localStorage
        function muatData() {
            const savedData = localStorage.getItem('bppkadDataV2');
            if (savedData) {
                dataKeuangan = JSON.parse(savedData);
            } else {
                // Initialize empty structure
                ['pendapatan', 'belanja', 'pembiayaan'].forEach(kategori => {
                    dataKeuangan[kategori] = {};
                });
            }
        }

        // Fungsi untuk menyimpan data ke localStorage
        function simpanKeStorage() {
            localStorage.setItem('bppkadDataV2', JSON.stringify(dataKeuangan));
        }

        // Fungsi untuk format rupiah
        function formatRupiah(angka) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(angka);
        }

        // Fungsi untuk update input subkategori
        function updateSubkategori() {
            const kategori = document.getElementById('kategori').value;
            const subkategoriInput = document.getElementById('subkategori');
            
            if (kategori) {
                subkategoriInput.disabled = false;
                subkategoriInput.placeholder = `Tulis nama subkategori untuk ${kategori}`;
            } else {
                subkategoriInput.disabled = true;
                subkategoriInput.placeholder = 'Tulis nama subkategori';
                subkategoriInput.value = '';
            }
        }

        // Fungsi untuk mendapatkan semua subkategori unik dari data
        function getSubkategoriFromData(kategori) {
            if (!dataKeuangan[kategori]) return [];
            return Object.keys(dataKeuangan[kategori]);
        }

        // Fungsi untuk membuat chart
        function buatChart(canvasId, kategori) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            
            // Hapus chart yang sudah ada
            if (charts[kategori]) {
                charts[kategori].destroy();
            }

            const subkategoriList = getSubkategoriFromData(kategori);
            
            if (subkategoriList.length === 0) {
                // Jika tidak ada data, tampilkan chart kosong
                charts[kategori] = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: tahunLabels,
                        datasets: []
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top'
                            }
                        },
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Tahun'
                                }
                            },
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Nilai (Rp)'
                                },
                                ticks: {
                                    callback: function(value) {
                                        return formatRupiah(value);
                                    }
                                }
                            }
                        }
                    }
                });
                return;
            }

            const datasets = subkategoriList.map((subkategori, index) => {
                const data = tahunLabels.map(tahun => {
                    return dataKeuangan[kategori][subkategori] ? 
                           (dataKeuangan[kategori][subkategori][tahun] || 0) : 0;
                });

                // Generate color based on index
                const colors = [
                    '#3498db', '#2980b9', '#1abc9c', '#16a085', '#27ae60', 
                    '#2ecc71', '#f39c12', '#e67e22', '#e74c3c', '#c0392b',
                    '#9b59b6', '#8e44ad', '#34495e', '#2c3e50', '#95a5a6'
                ];

                return {
                    label: subkategori,
                    data: data,
                    backgroundColor: colors[index % colors.length],
                    borderColor: colors[index % colors.length],
                    borderWidth: 1
                };
            });

            charts[kategori] = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: tahunLabels,
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Tahun'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Nilai (Rp)'
                            },
                            ticks: {
                                callback: function(value) {
                                    return formatRupiah(value);
                                }
                            }
                        }
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false
                    }
                }
            });
        }

        // Fungsi untuk update semua chart
        function updateAllCharts() {
            buatChart('pendapatanChart', 'pendapatan');
            buatChart('belanjaChart', 'belanja');
            buatChart('pembiayaanChart', 'pembiayaan');
        }

        // Fungsi untuk update ringkasan data
        function updateSummary() {
            const summaryGrid = document.getElementById('summaryGrid');
            summaryGrid.innerHTML = '';

            ['pendapatan', 'belanja', 'pembiayaan'].forEach(kategori => {
                const summaryCard = document.createElement('div');
                summaryCard.className = `summary-card ${kategori}`;
                
                let cardContent = `<h4>${kategori.charAt(0).toUpperCase() + kategori.slice(1)}</h4>`;
                
                const subkategoriList = getSubkategoriFromData(kategori);
                
                if (subkategoriList.length === 0) {
                    cardContent += '<div class="summary-item"><span>Belum ada data</span></div>';
                } else {
                    subkategoriList.forEach(subkategori => {
                        let total = 0;
                        if (dataKeuangan[kategori][subkategori]) {
                            total = Object.values(dataKeuangan[kategori][subkategori])
                                          .reduce((sum, val) => sum + (val || 0), 0);
                        }
                        
                        cardContent += `
                            <div class="summary-item">
                                <span>${subkategori}:</span>
                                <span class="currency">${formatRupiah(total)}</span>
                            </div>
                        `;
                    });
                }

                summaryCard.innerHTML = cardContent;
                summaryGrid.appendChild(summaryCard);
            });
        }

        // Fungsi untuk menampilkan alert
        function showAlert(message, isError = false) {
            const alertDiv = document.getElementById('alert');
            alertDiv.textContent = message;
            alertDiv.className = isError ? 'alert error show' : 'alert show';
            
            setTimeout(() => {
                alertDiv.classList.remove('show');
            }, 3000);
        }

        // Fungsi untuk menyimpan data
        function simpanData() {
            const kategori = document.getElementById('kategori').value;
            const subkategori = document.getElementById('subkategori').value.trim();
            const tahun = document.getElementById('tahun').value;
            const nilai = parseFloat(document.getElementById('nilai').value);

            // Validasi
            if (!kategori || !subkategori || !tahun || isNaN(nilai) || nilai < 0) {
                showAlert('Mohon lengkapi semua field dengan benar!', true);
                return;
            }

            // Validasi nama subkategori (tidak boleh kosong atau hanya spasi)
            if (subkategori.length === 0) {
                showAlert('Nama subkategori tidak boleh kosong!', true);
                return;
            }

            // Pastikan struktur data ada
            if (!dataKeuangan[kategori]) {
                dataKeuangan[kategori] = {};
            }
            if (!dataKeuangan[kategori][subkategori]) {
                dataKeuangan[kategori][subkategori] = {};
            }

            // Simpan data
            dataKeuangan[kategori][subkategori][tahun] = nilai;
            
            // Simpan ke localStorage
            simpanKeStorage();

            // Update chart dan summary
            updateAllCharts();
            updateSummary();

            // Show success message
            showAlert(`Data ${subkategori} tahun ${tahun} berhasil disimpan!`);

            // Reset form
            document.getElementById('kategori').value = '';
            document.getElementById('subkategori').disabled = true;
            document.getElementById('subkategori').placeholder = 'Tulis nama subkategori';
            document.getElementById('tahun').value = '';
            document.getElementById('nilai').value = '';
            document.getElementById('subkategori').value = '';
        }

        // Event listeners
        document.getElementById('nilai').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                simpanData();
            }
        });

        // Inisialisasi saat halaman dimuat
        window.addEventListener('DOMContentLoaded', function() {
            muatData();
            updateAllCharts();
            updateSummary();
        });
    </script>
</body>
</html>
